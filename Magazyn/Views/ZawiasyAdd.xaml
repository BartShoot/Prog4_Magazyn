<UserControl x:Class="Magazyn.Views.ZawiasyAdd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Magazyn.Views" 
             xmlns:ViewModel="clr-namespace:Magazyn.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <ViewModel:ZawiasyViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label Content="Firma"/>
        <TextBox Grid.Column="1" Text="{Binding Firma}"/>
        <Label Grid.Row="1" Content="Model"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Model}"/>
        <Label Grid.Row="2" Content="Cena"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Cena}"/>
        <Label Grid.Row="3" Content="Ilość"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Ilosc}"/>
        <Label Grid.Row="4" Content="Kąt Otwarcia"/>
        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding KatOtwarcia}"/>
        <Label Grid.Row="5" Content="Hamulec"/>
        <CheckBox Grid.Row="5" Grid.Column="1" IsChecked="{Binding Hamulec}"/>
        <Label Grid.Row="6" Content="Sprężyna"/>
        <CheckBox Grid.Row="6" Grid.Column="1" IsChecked="{Binding Sprezyna}"/>
        <Button Grid.Row="7" Grid.Column="1" Content="Zapisz" Command="{Binding AddZawiasCommand}"/>
        <TextBlock Grid.Column="2" Text="{Binding Firma}"/>
        <TextBlock Grid.Column="2" Grid.Row="1" Text="{Binding Model}"/>
        <TextBlock Grid.Column="2" Grid.Row="2" Text="{Binding Cena}"/>
        <TextBlock Grid.Column="2" Grid.Row="3" Text="{Binding Ilosc}"/>
        <TextBlock Grid.Column="2" Grid.Row="4" Text="{Binding KatOtwarcia}"/>
        <TextBlock Grid.Column="2" Grid.Row="5" Text="{Binding Hamulec}"/>
        <TextBlock Grid.Column="2" Grid.Row="6" Text="{Binding Sprezyna}"/>
    </Grid>
</UserControl>
